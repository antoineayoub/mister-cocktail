
<div class="product">
  <%= link_to upvote_cocktails_path(cocktail) do %>
    <div class='product-upvote'>
      <div class="product-arrow"></div>
      <div class='product-count'><%= cocktail.upvote %></div>
    </div>
  <% end %>
  <%= link_to(cocktail_path(cocktail)) do %>
    <%= image_tag cocktail.image, {class: "product-image" } %>
  <% end %>
    <div class='product-body'>
      <h3><%= cocktail.name %></h3>
      <p><%= cocktail.description %></p>
    </div>
  <ul class="list-inline product-controls product-controls-hidden">
    <li><a href=""><i class="fa fa-facebook"></i></a></li>
    <li><a href=""><i class="fa fa-twitter"></i></a></li>
    <li><a href=""><i class="fa fa-instagram"></i></a></li>
  </ul>
</div>
