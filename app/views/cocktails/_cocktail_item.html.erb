<div class="cocktail">
  <%= link_to upvote_cocktails_path(cocktail) do %>
    <div class='cocktail-upvote'>
      <div class="cocktail-arrow"></div>
      <div class='cocktail-count'><%= cocktail.upvote %></div>
    </div>
  <% end %>
  <%= link_to("", {"data-toggle" => "modal", "data-target" => "#cocktailModal_#{cocktail.id}"}) do %>
    <%= cl_image_tag cocktail.image, class: "cocktail-image" %>
  <% end %>
  <div class='cocktail-body'>
    <h3><%= cocktail.name %></h3>
    <p><%= cocktail.description %></p>
  </div>
  <ul class="list-inline cocktail-controls cocktail-controls-hidden">
    <li><a href=""><i class="fa fa-facebook"></i></a></li>
    <li><a href=""><i class="fa fa-twitter"></i></a></li>
    <li><a href=""><i class="fa fa-instagram"></i></a></li>
  </ul>
  <div hidden class="modal-body-content">
    <div class="row">
      <div class="col-xs-6">
        <%= cl_image_tag cocktail.image, width: 300 %>
      </div>
      <div class="col-xs-6">
        <ul>
          <% cocktail.doses.each do |d| %>
            <li><%= d.description %> of <%= d.ingredient.name %></li>
            <%= link_to "delete dose", cocktail_dose_path(cocktail, d), method: :delete %>
          <% end %>
        </ul>
         <%= link_to "Add a dose", new_cocktail_dose_path(cocktail) %>
      </div>
    </div>
  </div>
</div>



